<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/google_1x"
        android:layout_marginLeft="@dimen/google_4x"
        android:layout_marginRight="@dimen/google_4x"
        android:layout_marginTop="@dimen/google_2x"
        android:orientation="vertical"
        android:padding="@dimen/google_1x"
        card_view:cardBackgroundColor="@color/google_white_card_background"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:id="@+id/linear_card_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/google_1x">

            <RelativeLayout
                android:id="@+id/relative_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/google_1x"
                android:layout_marginLeft="@dimen/google_1x"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_title_icon"
                    android:layout_width="@dimen/google_3x"
                    android:layout_height="@dimen/google_3x"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/google_1x"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/google_gray_600" />

                <TextView
                    android:id="@+id/textView_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView_edit"
                    android:layout_toRightOf="@+id/imageView_title_icon"
                    android:gravity="center_vertical"
                    android:text="Buddies"
                    android:textColor="@color/google_gray_600"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView_edit"
                    android:layout_width="@dimen/google_4x"
                    android:layout_height="@dimen/google_4x"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/google_1x"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="@dimen/google_1x"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@color/google_gray_600" />

                <TextView
                    android:id="@+id/textView_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/google_1x"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="More"
                    android:textColor="@color/google_gray_600"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>