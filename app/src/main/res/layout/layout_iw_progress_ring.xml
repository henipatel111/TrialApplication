<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_iw_progress_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/google_2x"
        android:background="@drawable/oval_white"
        android:elevation="@dimen/google_1x"
        android:padding="@dimen/google_1x"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_progress"
            android:layout_width="@dimen/google_4x"
            android:layout_height="@dimen/google_4x"
            android:layout_gravity="center"
            android:elevation="@dimen/google_1x"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>