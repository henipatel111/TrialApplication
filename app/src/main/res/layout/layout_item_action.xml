<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/google_5x"
    android:background="@color/card_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/divider"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView_ic_action"
            android:layout_width="@dimen/google_3x"
            android:layout_height="@dimen/google_3x"
            android:layout_marginLeft="@dimen/google_1x"
            android:src="@drawable/ic_play_arrow_white_24dp"
            android:tint="@color/google_gray_800" />

        <TextView
            android:id="@+id/textView_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/google_1x"
            android:text="Play video"
            android:textColor="@color/google_gray_800" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/google_1x"
        android:layout_marginTop="@dimen/google_1x"
        android:layout_toLeftOf="@+id/linearLike"
        android:background="@color/google_gray_100" />

    <LinearLayout
        android:id="@+id/linearLike"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/google_1x">

        <ImageView
            android:id="@+id/imageViewLike"
            android:layout_width="@dimen/google_3x"
            android:layout_height="@dimen/google_3x"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:tint="@color/google_gray_800" />

        <TextView
            android:id="@+id/textViewLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewLike"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="150"
            android:textColor="@color/google_gray_800"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>