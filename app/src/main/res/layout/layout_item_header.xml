<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeItemHeaderHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/google_1x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linearLike"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/google_3x">

            <TextView
                android:id="@+id/textView_itemTitle"
                style="@style/reads_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_option_menu"
                android:text="Area of triangle"
                android:textColor="@color/google_gray_800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_option_menu"
                android:layout_width="@dimen/google_4x"
                android:layout_height="@dimen/google_3x"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:tint="@color/google_gray_500" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_itemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Following images shows how to find area of different types of triangles. "
            android:textColor="@color/google_gray_700"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
