<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/google_blue_50"
    tools:context="com.example.heni.bannersonhomepage.fragments.BannerFragment">

    <RelativeLayout
        android:id="@+id/rl_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/google_12x"
        android:layout_marginRight="@dimen/google_12x">

    <!-- <ImageView
           android:id="@+id/img_reference"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/google_1_5x"
           android:layout_marginLeft="@dimen/google_12x"
           android:layout_marginRight="@dimen/google_12x"
           android:layout_marginTop="@dimen/google_2x"
           android:adjustViewBounds="true"
           android:src="@drawable/home"
           android:visibility="invisible"
           />-->

    <LinearLayout
        android:id="@+id/ll_content_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="319dp">


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/google_deepPurple_500"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView"
            android:layout_below="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Hello"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_below="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hello"
            android:textColor="@color/google_red_600"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Hello"
            android:textStyle="bold"/>

 <!--<ImageView
            android:id="@+id/banner_link_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

</FrameLayout>