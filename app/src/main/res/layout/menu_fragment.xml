<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rv_rlholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/video_button"
            android:text="Video"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_rl_holder_1"
        android:layout_width="match_parent"
        android:layout_below="@id/rv_rlholder"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_send_notification"
            android:text="Send Notification"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_rl_holder_2"
        android:layout_width="match_parent"
        android:layout_below="@id/rv_rl_holder_1"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_try_webview"
        android:text="Try WebView"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>